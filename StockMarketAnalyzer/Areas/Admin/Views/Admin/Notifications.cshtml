@model IEnumerable<StockMarketAnalyzer.BO.Company>
@{
    ViewBag.Title = "Notifications";
}

<h2>Notifications</h2>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Exch</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="/Admin/Admin/UpdateHandle?ticker=@item.Symbol&name=@item.Name&FBhandle=@item.CompanyProfile.FBHandle&TWhandle=@item.CompanyProfile.TWHandle">
                                @item.Name ( @item.Symbol )
                            </a>
                        </td>
                        <td>@item.Exch</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<script type="text/javascript">
    function showHandles(name, ticker, facebookUrl) {
        alert(name);
        var model = { name: name, facebookUrl: facebookUrl, ticker: ticker };

        $("#FacebookWidgetDiv").load("@Url.Action("UpdateHandle", "Facebook", new { area = "" })", { name: model.name, facebookUrl: model.facebookUrl, ticker: model.ticker });
    }
</script>