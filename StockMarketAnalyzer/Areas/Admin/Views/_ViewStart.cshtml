@{
    //Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/_Layout.cshtml";

    if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Layout = "~/Areas/Users/Views/Shared/_Layout.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}