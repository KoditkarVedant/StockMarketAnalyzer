@{
    ViewBag.Title = "LookupCompany";
}

<div ng-app="MyApp" ng-controller="HomeController">
    <h2>Lookup the Company</h2>
    <br />
    <div class="form-group">
        <div class="input-group">
            <input type="text" name="query" id="query" class="form-control" style="max-width:100% !important" ng-model="query" ng-keyup="searchCompany()" placeholder="enter name or ticker of the company...">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">Search</button>
            </span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div id="searchResults">
            <table class="table table-striped table-hover" ng-show="query!=''">
                <thead>
                    <tr>
                        <th>Ticker</th>
                        <th>Name</th>
                        <th>Exchange</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in result" ng-click="getCompanyDetails(item.Symbol)" style="cursor:pointer">
                        <td>{{item.Symbol}}</td>
                        <td>{{item.Name}}</td>
                        <td>{{item.ExchDisp}} ( {{item.Exch}} )</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/angular.min.js"></script>
    <script type="text/javascript" src="~/Scripts/MyApp/app.js"></script>
}
